@using HGenealogy.Models.HGPedigree
@model List<HGPedigreeMetaModel>

@{
    Layout = "~/Views/Shared/_HGColumnsTwo.cshtml";
}

<div class="page registration-page">
    <div class="page-title">
        <h1>族譜瀏覽</h1>
    </div>
    <div class="page-body">
        @if (Model.Count > 0)
        {
            <div class="also-purchased-products-grid product-grid">
                @*<div class="title">
                        <strong></strong>
                    </div>*@
                <div class="item-grid">
                    @foreach (var item in Model)
                    {
                        <div class="item-box">@Html.Partial("_HGPedigreeMetaBox", item)</div>
                    }
                </div>
            </div>
        }
        <div class="add-button">
            <input type="submit" id="register-button" class="button-1 register-next-step-button" onclick="location.href='@Url.Action("DoCreate")'" value='建立' />
        </div>
    </div>
</div>

@section left
{
    <h1><strong>這裡放功能選單 之後要由兩欄式layout 產生</strong></h1>
}